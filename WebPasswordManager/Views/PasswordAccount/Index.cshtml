@model WebPasswordManager.Models.PasswordAccounts 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @Html.ActionLink("Add Account", "AddAccount", "PasswordAccount")<br />
    <div> 
        @foreach(var account in Model.Accounts)
        {

            @account.AccountName <span> </span> @Html.ActionLink("View Account", "GetViewAccountById", "PasswordAccount", new { id = account.Id}, null)            <span> </span> @Html.ActionLink("Edit Account", "EditAccount", "PasswordAccount", new { id = account.Id }, null)
            <span> </span> @Html.ActionLink("Delete Account", "RemoveAccount", "PasswordAccount", new { id = account.Id }, null)<br />
        }
    </div>
</body>
</html>
